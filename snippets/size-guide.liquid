{%- comment -%}
  Size Guide Modal
  Shows size chart for apparel products
  
  Usage:
    {% render 'size-guide' %}
{%- endcomment -%}

{%- if settings.pdp_show_size_guide -%}
  <div class="size-guide-trigger">
    <button type="button" class="size-guide-btn" aria-label="Open size guide">
      {{ 'products.product.size_guide' | t }}
    </button>
  </div>

  <div class="size-guide-modal" hidden id="size-guide-modal" role="dialog" aria-modal="true" aria-labelledby="size-guide-title">
    <div class="size-guide-modal__overlay" aria-hidden="true"></div>
    <div class="size-guide-modal__content">
      <div class="size-guide-modal__header">
        <h2 id="size-guide-title">{{ 'products.product.size_guide' | t }}</h2>
        <button type="button" class="size-guide-modal__close" aria-label="Close size guide">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </div>
      <div class="size-guide-modal__body">
        <table class="size-chart">
          <thead>
            <tr>
              <th>{{ 'products.product.size' | t }}</th>
              <th>{{ 'products.product.chest' | t }}</th>
              <th>{{ 'products.product.waist' | t }}</th>
              <th>{{ 'products.product.hips' | t }}</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>XS</td>
              <td>32-34"</td>
              <td>24-26"</td>
              <td>34-36"</td>
            </tr>
            <tr>
              <td>S</td>
              <td>34-36"</td>
              <td>26-28"</td>
              <td>36-38"</td>
            </tr>
            <tr>
              <td>M</td>
              <td>36-38"</td>
              <td>28-30"</td>
              <td>38-40"</td>
            </tr>
            <tr>
              <td>L</td>
              <td>38-40"</td>
              <td>30-32"</td>
              <td>40-42"</td>
            </tr>
            <tr>
              <td>XL</td>
              <td>40-42"</td>
              <td>32-34"</td>
              <td>42-44"</td>
            </tr>
            <tr>
              <td>XXL</td>
              <td>42-44"</td>
              <td>34-36"</td>
              <td>44-46"</td>
            </tr>
          </tbody>
        </table>
        <p class="size-guide-note">{{ 'products.product.size_guide_note' | t }}</p>
      </div>
    </div>
  </div>

  <script>
    (() => {
      const trigger = document.querySelector('.size-guide-btn');
      const modal = document.getElementById('size-guide-modal');
      const closeBtn = modal?.querySelector('.size-guide-modal__close');
      const overlay = modal?.querySelector('.size-guide-modal__overlay');

      if (!trigger || !modal) return;

      const open = () => {
        modal.hidden = false;
        document.body.style.overflow = 'hidden';
        closeBtn?.focus();
      };

      const close = () => {
        modal.hidden = true;
        document.body.style.overflow = '';
        trigger.focus();
      };

      trigger.addEventListener('click', open);
      closeBtn?.addEventListener('click', close);
      overlay?.addEventListener('click', close);

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.hidden) {
          close();
        }
      });
    })();
  </script>

  <style>
    .size-guide-trigger {
      margin: 0.5rem 0;
    }

    .size-guide-btn {
      all: unset;
      color: #666;
      font-size: 14px;
      text-decoration: underline;
      cursor: pointer;
      transition: color 0.2s ease;
    }

    .size-guide-btn:hover,
    .size-guide-btn:focus {
      color: #111;
    }

    .size-guide-modal {
      position: fixed;
      inset: 0;
      z-index: 1000;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .size-guide-modal__overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
    }

    .size-guide-modal__content {
      position: relative;
      background: #fff;
      border-radius: 12px;
      max-width: 600px;
      width: 90%;
      max-height: 80vh;
      overflow: auto;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .size-guide-modal__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem;
      border-bottom: 1px solid #e0e0e0;
      position: sticky;
      top: 0;
      background: #fff;
      z-index: 1;
    }

    .size-guide-modal__header h2 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 700;
    }

    .size-guide-modal__close {
      all: unset;
      cursor: pointer;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      transition: background 0.2s ease;
    }

    .size-guide-modal__close:hover,
    .size-guide-modal__close:focus {
      background: #f0f0f0;
    }

    .size-guide-modal__body {
      padding: 1.5rem;
    }

    .size-chart {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1rem;
    }

    .size-chart th,
    .size-chart td {
      padding: 0.75rem;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    .size-chart th {
      font-weight: 700;
      background: #f9f9f9;
    }

    .size-chart tbody tr:hover {
      background: #f9f9f9;
    }

    .size-guide-note {
      font-size: 14px;
      color: #666;
      margin: 0;
    }

    @media (prefers-reduced-motion: reduce) {
      .size-guide-btn,
      .size-guide-modal__close {
        transition: none;
      }
    }
  </style>
{%- endif -%}
