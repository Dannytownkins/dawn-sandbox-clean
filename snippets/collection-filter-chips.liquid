{%- if collection.filters and collection.filters.size > 0 -%}
<div class="filter-chips">
  {%- for f in collection.filters -%}
    {%- case f.type -%}
    {%- when 'price_range' -%}
      {%- if f.min_value or f.max_value -%}
        <a class="chip" href="{{ f.url_to_remove }}">
          Price:
          {%- if f.min_value -%} {{ f.min_value.value | money }} {%- endif -%}
          {%- if f.max_value -%} – {{ f.max_value.value | money }} {%- endif -%}
          ×
        </a>
      {%- endif -%}
    {%- else -%}
      {%- for v in f.active_values -%}
        <a class="chip" href="{{ v.url_to_remove }}">{{ v.label }} ×</a>
      {%- endfor -%}
    {%- endcase -%}
  {%- endfor -%}
</div>
{%- endif -%}
<style>
.filter-chips{display:flex;flex-wrap:wrap;gap:8px;margin:8px 0 16px}
.filter-chips .chip{border:1px solid #ddd;border-radius:999px;padding:6px 10px;display:inline-block}
</style>