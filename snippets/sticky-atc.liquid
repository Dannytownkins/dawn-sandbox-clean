{% if template.name == 'product' and product.available %}
<style>
  @media (max-width: 749px){
    .astra-sticky-atc{position:fixed;left:0;right:0;bottom:0;z-index:50;background:#111;color:#fff;padding:12px 14px;box-shadow:0 -6px 24px rgba(0,0,0,.18)}
    .astra-sticky-atc .row{display:flex;gap:10px;align-items:center}
    .astra-sticky-atc .btn{flex:1;min-height:44px;border-radius:12px;border:1px solid #111;background:#F7E06A;color:#111;font-weight:700}
    .astra-sticky-atc .btn.buy{background:#fff;color:#111}
  }
</style>
<div class="astra-sticky-atc">
  <form method="post" action="/cart/add" class="row">
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
    <button class="btn" name="add" type="submit">{{ 'products.product.add_to_cart' | t }}</button>
    {{ form | payment_button | default: '<button class="btn buy" type="submit" formaction="/checkout">Buy it now</button>' }}
  </form>
</div>
{% endif %}