{% comment %}
  Urgency indicator for low stock items
  
  Usage:
  {% render 'urgency-inline', variant: product.selected_or_first_available_variant %}
{% endcomment %}

{%- if settings.pdp_show_urgency and variant.inventory_management == 'shopify' and variant.inventory_quantity > 0 and variant.inventory_quantity < 5 -%}
  <div class="urgency-inline" role="status" aria-live="polite">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
    </svg>
    <span class="urgency-inline__text">
      {{ 'products.product.urgency_message' | t: count: variant.inventory_quantity }}
    </span>
  </div>
{%- endif -%}

<style>
  .urgency-inline {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 6px;
    margin: 12px 0;
    font-size: 14px;
    font-weight: 600;
    color: #856404;
  }
  
  .urgency-inline svg {
    flex-shrink: 0;
    color: #ffc107;
  }
  
  .urgency-inline__text {
    margin: 0;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .urgency-inline {
      transition: none;
    }
  }
</style>
