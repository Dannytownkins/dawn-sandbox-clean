{% comment %} Config {% endcomment %}
{% assign threshold_dollars = 50 %}
{% assign threshold_cents = threshold_dollars | times: 100 %}
{% assign total = cart.total_price %}
{% assign left = threshold_cents | minus: total %}
{% assign pct = total | times: 100 | divided_by: threshold_cents %}
{% if pct > 100 %}{% assign pct = 100 %}{% endif %}
<style>
  .fsb{background:#eee;border-radius:999px;height:10px;overflow:hidden}
  .fsb > span{display:block;height:100%;width:{{ pct }}%;background:#F7E06A}
  .fsb-msg{display:flex;justify-content:space-between;align-items:center;margin:8px 0 10px}
  .fsb-msg b{font-weight:700}
</style>
<div class="fsb-wrap">
  {% if left > 0 %}
    <div class="fsb-msg"><span>You’re <b>{{ left | money }}</b> away from free shipping</span></div>
  {% else %}
    <div class="fsb-msg"><span><b>You’re eligible for free shipping!</b></span></div>
  {% endif %}
  <div class="fsb"><span></span></div>
</div>
