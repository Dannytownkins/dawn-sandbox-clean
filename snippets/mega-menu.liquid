{%- comment -%}
  Mega Menu
  Renders a multi-column panel for navigation items
  
  Usage:
    {% render 'mega-menu', menu_handle: 'main-menu', link: link %}
{%- endcomment -%}

{%- assign mega_handle = settings.mega_menu_handle | default: 'mega-menu' -%}
{%- assign mega_heading = settings.mega_menu_heading | default: 'Shop' -%}

{%- if link.title == mega_heading and linklists[mega_handle].links.size > 0 -%}
  <div class="mega-menu" hidden>
    <div class="mega-menu__inner">
      {%- for child_link in linklists[mega_handle].links -%}
        <div class="mega-menu__column">
          <h3 class="mega-menu__heading">
            <a href="{{ child_link.url }}">{{ child_link.title }}</a>
          </h3>
          {%- if child_link.links.size > 0 -%}
            <ul class="mega-menu__list" role="list">
              {%- for sub_link in child_link.links -%}
                <li>
                  <a href="{{ sub_link.url }}">{{ sub_link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const trigger = document.querySelector('[data-mega-trigger="{{ mega_heading | escape }}"]');
      const panel = trigger?.nextElementSibling;
      
      if (!trigger || !panel) return;

      let timeout;
      
      const show = () => {
        clearTimeout(timeout);
        panel.hidden = false;
      };
      
      const hide = () => {
        timeout = setTimeout(() => {
          panel.hidden = true;
        }, 200);
      };

      trigger.addEventListener('mouseenter', show);
      trigger.addEventListener('focusin', show);
      trigger.addEventListener('mouseleave', hide);
      
      panel.addEventListener('mouseenter', show);
      panel.addEventListener('mouseleave', hide);

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          panel.hidden = true;
        }
      });
    });
  </script>

  <style>
    .mega-menu {
      position: absolute;
      top: 100%;
      left: 0;
      background: #fff;
      border: 1px solid #e0e0e0;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      padding: 1.5rem;
      min-width: 600px;
      z-index: 100;
      margin-top: 8px;
    }

    .mega-menu__inner {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 1.5rem;
    }

    .mega-menu__column {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .mega-menu__heading {
      font-size: 16px;
      font-weight: 700;
      margin: 0;
    }

    .mega-menu__heading a {
      text-decoration: none;
      color: inherit;
    }

    .mega-menu__heading a:hover {
      color: #666;
    }

    .mega-menu__list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .mega-menu__list a {
      text-decoration: none;
      color: #666;
      font-size: 14px;
      transition: color 0.2s ease;
    }

    .mega-menu__list a:hover,
    .mega-menu__list a:focus {
      color: #111;
    }

    @media (prefers-reduced-motion: reduce) {
      .mega-menu__list a {
        transition: none;
      }
    }

    @media (max-width: 767px) {
      .mega-menu {
        display: none;
      }
    }
  </style>
{%- endif -%}
