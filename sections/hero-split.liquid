<div class="section section-{{ section.id }}">
<style>
  .section-{{ section.id }} {
    padding-block: {{ section.settings.pad_y | default: 40 }}px;
    text-align: {{ section.settings.text_align | default: 'left' }};
  }
  .section-{{ section.id }} :where(.image, .media, .card__media, .image-with-text__media, .hero-split__img) img {
    max-width: {{ section.settings.image_max | default: 800 }}px;
    height: auto;
  }
  .section-{{ section.id }} :where(.buttons, .button-row, .card__actions, .cta-row, .hero-split__btn) {
    display: flex;
    justify-content: {% if section.settings.button_align == 'center' %}center{% elsif section.settings.button_align == 'right' %}flex-end{% else %}flex-start{% endif %};
    gap: .5rem;
    flex-wrap: wrap;
  }
</style>

{% stylesheet %}
  :root {
    --hero-pad: clamp(20px, 2.5vw, 40px);
  }
  .hero-split {
    margin: 0;
    padding: 0;
    border: 0;
  }
  .hero-split__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }
  @media (max-width: 920px) {
    .hero-split__grid {
      grid-template-columns: 1fr;
    }
    .hero-split__content {
      place-items: center;
      text-align: center;
    }
  }
  .hero-split__pane {
    position: relative;
    min-height: clamp(250px, 25vh, 300px); /* much smaller */
    overflow: hidden;
  }
  .hero-split__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transform: translateZ(0);
  }
  .hero-split__shade {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.08), rgba(0, 0, 0, 0.1));
    pointer-events: none;
  }
  .hero-split__content {
    position: relative;
    z-index: 2;
    display: grid;
    /* Center vertically + align to the right horizontally */
    place-items: center end; /* vertical center, horizontal right */
    height: 100%;
    padding: var(--hero-pad);
    text-align: right;
  }
  .hero-split__content-inner {
    max-width: 520px;
  }
  .hero-split__title {
    margin: 0 0 8px;
    font-size: clamp(22px, 2.6vw, 28px);
    font-weight: 800;
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }
  .hero-split__desc {
    margin: 0 0 16px;
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(14px, 1.6vw, 16px);
  }
  .hero-split__btn {
    display: inline-block;
    background: #eded6b;
    color: #111;
    font-weight: 800;
    padding: 12px 16px;
    border-radius: 12px;
    text-decoration: none;
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.35);
  }
  .hero-split__pane--light .hero-split__title,
  .hero-split__pane--light .hero-split__desc {
    color: #111;
    text-shadow: none;
  }
  .hero-split__pane--light .hero-split__shade {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.06));
  }
{% endstylesheet %}

<section class="hero-split">
  <div class="hero-split__grid">
    <!-- Light -->
    <div class="hero-split__pane hero-split__pane--light">
      {% if section.settings.light_image %}
        <img
          class="hero-split__img"
          src="{{ section.settings.light_image | image_url: width: 2000 }}"
          alt="{{ section.settings.light_title | escape }}"
          width="2000"
          height="1125"
        >
      {% endif %}
      <span class="hero-split__shade"></span>
      <div class="hero-split__content">
        <div class="hero-split__content-inner">
          <h2 class="hero-split__title">{{ section.settings.light_title }}</h2>
          <p class="hero-split__desc">{{ section.settings.light_desc }}</p>
          {% if section.settings.light_link != blank %}
            <a class="hero-split__btn" href="{{ section.settings.light_link }}">Shop Light</a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Dark -->
    <div class="hero-split__pane hero-split__pane--dark">
      {% if section.settings.dark_image %}
        <img
          class="hero-split__img"
          src="{{ section.settings.dark_image | image_url: width: 2000 }}"
          alt="{{ section.settings.dark_title | escape }}"
          width="2000"
          height="1125"
        >
      {% endif %}
      <span class="hero-split__shade"></span>
      <div class="hero-split__content">
        <div class="hero-split__content-inner">
          <h2 class="hero-split__title">{{ section.settings.dark_title }}</h2>
          <p class="hero-split__desc">{{ section.settings.dark_desc }}</p>
          {% if section.settings.dark_link != blank %}
            <a class="hero-split__btn" href="{{ section.settings.dark_link }}">Shop Dark</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
</div>

{% schema %}
{
  "name": "Split hero",
  "settings": [
    { "type": "image_picker", "id": "light_image", "label": "Light image" },
    { "type": "text", "id": "light_title", "label": "Light title", "default": "Light Humor" },
    {
      "type": "text",
      "id": "light_desc",
      "label": "Light description",
      "default": "Sarcastic optimism for sunnier days."
    },
    { "type": "url", "id": "light_link", "label": "Light link (collection)" },

    { "type": "image_picker", "id": "dark_image", "label": "Dark image" },
    { "type": "text", "id": "dark_title", "label": "Dark title", "default": "Dark Humor" },
    {
      "type": "text",
      "id": "dark_desc",
      "label": "Dark description",
      "default": "Pitch-black jokes, midnight cotton."
    },
    { "type": "url", "id": "dark_link", "label": "Dark link (collection)" },
    {
      "type": "header",
      "content": "Design Controls"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "pad_y",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_max",
      "min": 240,
      "max": 1600,
      "step": 20,
      "unit": "px",
      "label": "Max image width",
      "default": 800
    },
    {
      "type": "select",
      "id": "button_align",
      "label": "Button alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [{ "name": "Split hero" }]
}
{% endschema %}
