<section class="usp">
  <div class="usp__wrap">
    <div class="usp__item">🔒 <span>SSL Secure Checkout</span></div>
    <div class="usp__item">↩️ <span>30-Day Returns</span></div>
    <div class="usp__item">🚚 <span>Free Shipping $50+</span></div>
  </div>
</section>

<style>
.usp { border-block: 1px solid rgba(0,0,0,.08); background: var(--color-bg, #111); }
.usp__wrap {
  max-width: 1200px; margin: 0 auto; padding: 14px clamp(12px, 3vw, 24px);
  display:grid; grid-template-columns: repeat(3, 1fr); gap: 12px;
}
.usp__item { display:flex; align-items:center; gap:10px; font-weight:600; color:#f5f5f5; opacity:.95; }
@media (prefers-color-scheme: light){
  .usp { background:#f7f7f7; }
  .usp__item { color:#111; }
}
@media (max-width: 900px){ .usp__wrap { grid-template-columns:1fr; text-align:center; justify-items:center; } }
</style>

