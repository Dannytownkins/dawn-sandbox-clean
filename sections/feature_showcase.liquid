{% liquid
  assign color_scheme = section.settings.color_scheme
%}

<section
  id="section-{{ section.id }}"
  class="feature-showcase color-{{ color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="feature-showcase__header">
        <h2 class="feature-showcase__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <div class="feature-showcase__description rte">{{ section.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="feature-showcase__grid">
        {% for block in section.blocks %}
          <div class="feature-showcase__item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="feature-showcase__icon">
                {{ block.settings.icon | image_url: width: 64 | image_tag: alt: block.settings.title, loading: 'lazy' }}
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <h3 class="feature-showcase__item-title">{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="feature-showcase__item-description rte">{{ block.settings.description }}</div>
            {% endif %}

            {% if block.settings.link_text != blank and block.settings.link_url != blank %}
              <a href="{{ block.settings.link_url }}" class="feature-showcase__link">
                {{ block.settings.link_text }}
                <svg class="icon icon-arrow" aria-hidden="true" focusable="false">
                  <use href="#icon-arrow"></use>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Feature Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why choose us"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon/Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Describe your feature here.</p>"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Showcase",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Premium Quality",
            "description": "<p>Crafted with attention to detail and built to last.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Fast Shipping",
            "description": "<p>Free shipping on orders over $75. Express options available.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Easy Returns",
            "description": "<p>30-day returns, no questions asked.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
