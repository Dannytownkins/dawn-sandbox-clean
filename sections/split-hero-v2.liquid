{% comment %} sections/split-hero-v2.liquid {% endcomment %}
{{ 'component-split-hero.css' | asset_url | stylesheet_tag }}
<div class="section section-{{ section.id }}">
<style>
  .section-{{ section.id }} {
    padding-block: {{ section.settings.pad_y | default: 40 }}px;
    text-align: {{ section.settings.text_align | default: 'left' }};
  }
  .section-{{ section.id }} :where(.image, .media, .card__media, .image-with-text__media, .tile-media) img {
    max-width: {{ section.settings.image_max | default: 800 }}px;
    height: auto;
  }
  .section-{{ section.id }} :where(.buttons, .button-row, .card__actions, .cta-row, .button) {
    display: flex;
    justify-content: {% if section.settings.button_align == 'center' %}center{% elsif section.settings.button_align == 'right' %}flex-end{% else %}flex-start{% endif %};
    gap: .5rem;
    flex-wrap: wrap;
  }
</style>
<section class="split-hero" data-section-type="split-hero">
  <div class="split-hero__col split-hero__col--light">
    <div class="tile">
      <div class="tile-media">
        {% if section.settings.light_image %}
          <img src="{{ section.settings.light_image | image_url: width: 2000 }}" alt="{{ section.settings.light_heading | escape }}" loading="eager" />
        {% endif %}
      </div>
      <div class="tile-inner">
        <div class="split-hero__content">
          <p class="eyebrow">Light Humor</p>
          <h2>Sarcastic optimism for sunnier days.</h2>
          <a class="button button--primary" href="/collections/light-humor">Shop Light</a>
        </div>
      </div>
    </div>
  </div>
  <div class="split-hero__col split-hero__col--dark">
    <div class="tile">
      <div class="tile-media">
        {% if section.settings.dark_image %}
          <img src="{{ section.settings.dark_image | image_url: width: 2000 }}" alt="{{ section.settings.dark_heading | escape }}" loading="eager" />
        {% endif %}
      </div>
      <div class="tile-inner">
        <div class="split-hero__content">
          <p class="eyebrow">Dark Humor</p>
          <h2>Pitch-black jokes, midnight cotton.</h2>
          <a class="button button--secondary" href="/collections/dark-humor">Shop Dark</a>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
{% schema %}
{
  "name": "Split hero v2",
  "enabled_on": { "templates": ["index"] },
  "settings": [
    { "type": "image_picker", "id": "light_image", "label": "Light image" },
    { "type": "text", "id": "light_heading", "label": "Light heading", "default": "Light Humor" },
    { "type": "image_picker", "id": "dark_image", "label": "Dark image" },
    { "type": "text", "id": "dark_heading", "label": "Dark heading", "default": "Dark Humor" },
    {
      "type": "header",
      "content": "Design Controls"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "pad_y",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_max",
      "min": 240,
      "max": 1600,
      "step": 20,
      "unit": "px",
      "label": "Max image width",
      "default": 800
    },
    {
      "type": "select",
      "id": "button_align",
      "label": "Button alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}
