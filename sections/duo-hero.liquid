      "default": "<p>Bright, airy, and uplifting. Perfect for those who love a good laugh.</p>"
    },
    {
      "type": "text",
      "id": "light_cta_text",
      "label": "Light card CTA text",
      "default": "Shop Light"
    },
    {
      "type": "url",
      "id": "light_cta_link",
      "label": "Light card CTA link"
    },
    {
      "type": "header",
      "content": "Dark Card"
    },
    {
      "type": "image_picker",
      "id": "dark_image",
      "label": "Dark card image"
    },
    {
      "type": "text",
      "id": "dark_heading",
      "label": "Dark card heading",
      "default": "Dark Humor"
    },
    {
      "type": "richtext",
      "id": "dark_text",
      "label": "Dark card text",
      "default": "<p>Bold, edgy, and mysterious. For those who prefer their comedy on the darker side.</p>"
    },
    {
      "type": "text",
      "id": "dark_cta_text",
      "label": "Dark card CTA text",
      "default": "Shop Dark"
    },
    {
      "type": "url",
      "id": "dark_cta_link",
      "label": "Dark card CTA link"
    }
  ],
  "presets": [
    {
      "name": "Duo Hero"
    }
  ]
}
{% endschema %}
