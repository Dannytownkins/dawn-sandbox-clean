{{ 'component-image.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign light_heading = section.settings.light_heading
  assign light_text = section.settings.light_text
  assign light_cta_text = section.settings.light_cta_text
  assign light_cta_link = section.settings.light_cta_link
  assign light_image = section.settings.light_image
  
  assign dark_heading = section.settings.dark_heading
  assign dark_text = section.settings.dark_text
  assign dark_cta_text = section.settings.dark_cta_text
  assign dark_cta_link = section.settings.dark_cta_link
  assign dark_image = section.settings.dark_image
-%}

<div class="duo-hero">
  <div class="duo-hero__container page-width">
    <div class="duo-hero__grid">
      {%- comment -%} Light Card {%- endcomment -%}
      <div class="duo-hero__card duo-hero__card--light">
        {%- if light_image != blank -%}
          <div class="duo-hero__media">
            {{
              light_image
              | image_url: width: 800
              | image_tag: loading: 'eager', fetchpriority: 'high', widths: '400, 600, 800', width: light_image.width, height: light_image.height, class: 'duo-hero__image'
            }}
          </div>
        {%- endif -%}
        <div class="duo-hero__content">
          {%- if light_heading != blank -%}
            <h2 class="duo-hero__heading h1">{{ light_heading }}</h2>
          {%- endif -%}
          {%- if light_text != blank -%}
            <div class="duo-hero__text">{{ light_text }}</div>
          {%- endif -%}
          {%- if light_cta_text != blank and light_cta_link != blank -%}
            <a href="{{ light_cta_link }}" class="btn btn--pill">{{ light_cta_text }}</a>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Dark Card {%- endcomment -%}
      <div class="duo-hero__card duo-hero__card--dark">
        {%- if dark_image != blank -%}
          <div class="duo-hero__media">
            {{
              dark_image
              | image_url: width: 800
              | image_tag: loading: 'lazy', widths: '400, 600, 800', class: 'duo-hero__image'
            }}
          </div>
        {%- endif -%}
        <div class="duo-hero__content">
          {%- if dark_heading != blank -%}
            <h2 class="duo-hero__heading h1">{{ dark_heading }}</h2>
          {%- endif -%}
          {%- if dark_text != blank -%}
            <div class="duo-hero__text">{{ dark_text }}</div>
          {%- endif -%}
          {%- if dark_cta_text != blank and dark_cta_link != blank -%}
            <a href="{{ dark_cta_link }}" class="btn btn--sharp">{{ dark_cta_text }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .duo-hero {
    background: #fafafa;
    padding: 3rem 0;
  }

  .duo-hero__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .duo-hero__grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  .duo-hero__card {
    border-radius: 20px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  @media (prefers-reduced-motion: reduce) {
    .duo-hero__card {
      transition: none;
    }
  }

  .duo-hero__card--light {
    background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
    border: 1px solid #e0e0e0;
  }

  .duo-hero__card--light:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
  }

  .duo-hero__card--dark {
    background: linear-gradient(135deg, #1a1a1c 0%, #0b0b0c 100%);
    color: #fff;
    border: 1px solid #2a2a2c;
    border-radius: 12px;
  }

  .duo-hero__card--dark:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
  }

  .duo-hero__media {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .duo-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .duo-hero__content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  .duo-hero__heading {
    margin: 0;
    font-size: var(--step-3, 2rem);
    font-weight: 800;
    line-height: 1.1;
  }

  .duo-hero__text {
    font-size: var(--step-0, 1rem);
    line-height: 1.6;
    opacity: 0.9;
  }

  .btn--pill {
    border-radius: 999px;
    background: #eded6b;
    color: #111;
    padding: 0.85rem 1.5rem;
    font-weight: 800;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .btn--pill:hover {
    background: #f5f56f;
    transform: scale(1.05);
  }

  .btn--sharp {
    border-radius: 8px;
    background: #fff;
    color: #111;
    padding: 0.85rem 1.5rem;
    font-weight: 800;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .btn--sharp:hover {
    background: #f0f0f0;
    transform: scale(0.98);
  }

  @media (prefers-reduced-motion: reduce) {
    .btn--pill,
    .btn--sharp {
      transition: none;
    }
    
    .btn--pill:hover,
    .btn--sharp:hover {
      transform: none;
    }
  }
</style>

