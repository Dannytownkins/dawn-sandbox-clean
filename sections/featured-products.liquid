{% comment %}
  Featured products - simple manual picks grid
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} .card__inner { aspect-ratio:auto; }
  #shopify-section-{{ section.id }} .card__media img{ object-fit:contain !important; }
  #shopify-section-{{ section.id }} .grid{ grid-template-columns: repeat({{ section.settings.columns_desktop }}, minmax(0,1fr)); gap: 28px; }
</style>

<div class="section section-featured-products">
  <div class="page-width">
    <ul class="grid">
      {% for product in collections[section.settings.collection].products limit: 12 %}
        <li class="grid__item">
          {% render 'card-product', card_product: product, media_aspect_ratio: section.settings.image_ratio %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Featured products",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Collection" },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Desktop columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Card image ratio",
      "options": [
        { "value": "adapt", "label": "Adapt to image" },
        { "value": "square", "label": "Square" },
        { "value": "portrait", "label": "Portrait" }
      ],
      "default": "adapt"
    }
  ]
}
{% endschema %}
