{% comment %}
  Dual category cards for Light vs Dark humor
{% endcomment %}

<section class="category-duo" data-section-id="{{ section.id }}">
  <div class="category-duo__grid">
    {% for block in section.blocks %}
      <article class="category-card category-card--{{ block.settings.theme | default: 'light' }}" {{ block.shopify_attributes }}>
        <div class="category-card__media">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 900 | image_tag: loading: 'lazy', alt: block.settings.heading }}
          {% endif %}
        </div>
        <div class="category-card__content">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.copy }}</p>
          <a class="category-card__cta" href="{{ block.settings.link }}">{{ block.settings.cta_label }}</a>
        </div>
      </article>
    {% endfor %}
  </div>
</section>

<style>
  .category-duo__grid {
    display: grid;
    gap: 24px;
  }
  @media (min-width: 920px) {
    .category-duo__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  .category-card {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    display: grid;
    min-height: 360px;
  }
  .category-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .category-card__content {
    position: absolute;
    inset: 0;
    padding: clamp(24px, 4vw, 48px);
    display: grid;
    align-content: center;
    gap: 12px;
    background: linear-gradient(130deg, rgba(0,0,0,0.75) 10%, rgba(0,0,0,0.35) 60%, rgba(0,0,0,0.1) 100%);
    color: #fff;
  }
  .category-card--light .category-card__content {
    background: linear-gradient(130deg, rgba(255,255,255,0.85) 0%, rgba(255,255,255,0.5) 60%, rgba(255,255,255,0.2) 100%);
    color: #111;
  }
  .category-card__cta {
    justify-self: start;
    padding: 12px 24px;
    border-radius: 12px;
    background: #eded6b;
    color: #111;
    font-weight: 700;
    text-decoration: none;
  }
</style>

{% schema %}
{
  "name": "Light vs Dark cards",
  "blocks": [
    {
      "type": "card",
      "name": "Category card",
      "settings": [
        { "type": "select", "id": "theme", "label": "Theme", "options": [ {"label": "Light", "value": "light"}, {"label": "Dark", "value": "dark"} ], "default": "light" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Light Humor" },
        { "type": "textarea", "id": "copy", "label": "Copy", "default": "Sarcastic optimism for sunny moods." },
        { "type": "url", "id": "link", "label": "Link" },
        { "type": "text", "id": "cta_label", "label": "CTA label", "default": "Shop Light" },
        { "type": "image_picker", "id": "image", "label": "Background image" }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Light vs Dark cards",
      "blocks": [
        { "type": "card", "settings": { "theme": "light" } },
        { "type": "card", "settings": { "theme": "dark", "heading": "Dark Humor", "cta_label": "Shop Dark" } }
      ]
    }
  ]
}
{% endschema %}
