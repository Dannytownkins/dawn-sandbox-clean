{% liquid
  assign color_scheme = section.settings.color_scheme
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = section.settings.autoplay_speed
  assign autoplay_speed_ms = autoplay_speed | times: 1000
%}

<section
  id="section-{{ section.id }}"
  class="testimonials-rotator color-{{ color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="testimonials-rotator__header">
        <h2 class="testimonials-rotator__heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="testimonials-rotator__wrapper">
        <div
          class="testimonials-rotator__slider"
          data-autoplay="{{ autoplay }}"
          data-speed="{{ autoplay_speed_ms }}"
          aria-live="polite"
          aria-label="Customer testimonials"
        >
          {% for block in section.blocks %}
            <div
              class="testimonials-rotator__slide{% if forloop.first %} testimonials-rotator__slide--active{% endif %}"
              data-slide="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.quote != blank %}
                <blockquote class="testimonials-rotator__quote">"{{ block.settings.quote }}"</blockquote>
              {% endif %}

              <div class="testimonials-rotator__author">
                {% if block.settings.author_image != blank %}
                  <div class="testimonials-rotator__author-image">
                    {{ block.settings.author_image | image_url: width: 80 | image_tag }}
                  </div>
                {% endif %}

                <div class="testimonials-rotator__author-info">
                  {% if block.settings.author_name != blank %}
                    <cite class="testimonials-rotator__author-name">{{ block.settings.author_name }}</cite>
                  {% endif %}

                  {% if block.settings.author_role != blank %}
                    <div class="testimonials-rotator__author-role">{{ block.settings.author_role }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if section.blocks.size > 1 %}
          <div class="testimonials-rotator__controls">
            <button
              type="button"
              class="testimonials-rotator__control testimonials-rotator__control--prev"
              aria-label="Previous testimonial"
            >
              <svg class="icon" aria-hidden="true" focusable="false">
                <use href="#icon-caret"></use>
              </svg>
            </button>

            <div class="testimonials-rotator__dots">
              {% for block in section.blocks %}
                <button
                  type="button"
                  class="testimonials-rotator__dot{% if forloop.first %} testimonials-rotator__dot--active{% endif %}"
                  data-slide="{{ forloop.index0 }}"
                  aria-label="Go to testimonial {{ forloop.index }}"
                ></button>
              {% endfor %}
            </div>

            <button
              type="button"
              class="testimonials-rotator__control testimonials-rotator__control--next"
              aria-label="Next testimonial"
            >
              <svg class="icon" aria-hidden="true" focusable="false">
                <use href="#icon-caret"></use>
              </svg>
            </button>
          </div>

          {% if autoplay %}
            <button
              type="button"
              class="testimonials-rotator__pause"
              aria-label="Pause testimonial slideshow"
            >
              <span class="testimonials-rotator__pause-text">Pause</span>
            </button>
          {% endif %}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const rotators = document.querySelectorAll('.testimonials-rotator__slider');

    rotators.forEach(function (rotator) {
      const slides = rotator.querySelectorAll('.testimonials-rotator__slide');
      const dots = rotator.parentElement.querySelectorAll('.testimonials-rotator__dot');
      const prevBtn = rotator.parentElement.querySelector('.testimonials-rotator__control--prev');
      const nextBtn = rotator.parentElement.querySelector('.testimonials-rotator__control--next');
      const pauseBtn = rotator.parentElement.querySelector('.testimonials-rotator__pause');

      let currentSlide = 0;
      let autoplayInterval;
      let isPlaying = rotator.dataset.autoplay === 'true';
      const speed = parseInt(rotator.dataset.speed) || 5000;

      function showSlide(index) {
        slides.forEach((slide, i) => {
          slide.classList.toggle('testimonials-rotator__slide--active', i === index);
        });

        dots.forEach((dot, i) => {
          dot.classList.toggle('testimonials-rotator__dot--active', i === index);
        });

        currentSlide = index;
      }

      function nextSlide() {
        const next = (currentSlide + 1) % slides.length;
        showSlide(next);
      }

      function prevSlide() {
        const prev = (currentSlide - 1 + slides.length) % slides.length;
        showSlide(prev);
      }

      function startAutoplay() {
        if (isPlaying && slides.length > 1) {
          autoplayInterval = setInterval(nextSlide, speed);
        }
      }

      function stopAutoplay() {
        clearInterval(autoplayInterval);
      }

      function toggleAutoplay() {
        if (isPlaying) {
          stopAutoplay();
          isPlaying = false;
          pauseBtn.querySelector('.testimonials-rotator__pause-text').textContent = 'Play';
          pauseBtn.setAttribute('aria-label', 'Play testimonial slideshow');
        } else {
          startAutoplay();
          isPlaying = true;
          pauseBtn.querySelector('.testimonials-rotator__pause-text').textContent = 'Pause';
          pauseBtn.setAttribute('aria-label', 'Pause testimonial slideshow');
        }
      }

      // Event listeners
      if (nextBtn)
        nextBtn.addEventListener('click', () => {
          stopAutoplay();
          nextSlide();
        });
      if (prevBtn)
        prevBtn.addEventListener('click', () => {
          stopAutoplay();
          prevSlide();
        });
      if (pauseBtn) pauseBtn.addEventListener('click', toggleAutoplay);

      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          stopAutoplay();
          showSlide(index);
        });
      });

      // Pause on hover
      rotator.addEventListener('mouseenter', stopAutoplay);
      rotator.addEventListener('mouseleave', () => {
        if (isPlaying) startAutoplay();
      });

      // Respect reduced motion
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        isPlaying = false;
      } else {
        startAutoplay();
      }
    });
  });
</script>

{% schema %}
{
  "name": "Testimonials Rotator",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our customers say"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate testimonials",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
