{% comment %}
  Featured testimonials carousel for homepage
{% endcomment %}

<section class="featured-testimonials" data-section-id="{{ section.id }}">
  <div class="featured-testimonials__inner">
    {% if section.settings.heading != blank %}
      <h2 class="featured-testimonials__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="t-slider" tabindex="0" role="list" aria-label="Customer testimonials">
      {% for block in section.blocks %}
        <article class="t-card" role="listitem" {{ block.shopify_attributes }}>
          {% if block.settings.quote != blank %}
            <blockquote class="testimonial__quote">{{ block.settings.quote }}</blockquote>
          {% endif %}
          <div class="testimonial__meta">
            {% if block.settings.avatar != blank %}
              {{ block.settings.avatar | image_url: width: 120 | image_tag: class: 'testimonial__avatar', loading: 'lazy' }}
            {% endif %}
            <div>
              <p class="testimonial__name">{{ block.settings.name }}</p>
              {% if block.settings.meta != blank %}
                <p class="testimonial__info">{{ block.settings.meta }}</p>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-testimonials {
    background: #0b0b0c;
    color: #f2f2f2;
    padding: clamp(32px, 5vw, 80px) 0;
  }
  .featured-testimonials__inner {
    display: grid;
    gap: 32px;
    margin: 0 auto;
    max-width: 1280px;
    padding: 0 clamp(16px, 4vw, 24px);
  }
  .featured-testimonials__heading {
    font-size: clamp(28px, 4vw, 48px);
    margin: 0;
    text-align: center;
    color: #fff;
  }
  
  /* Horizontal scroll slider */
  .t-slider {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 85%;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 12px 4px;
    margin: 0 -4px;
    -webkit-overflow-scrolling: touch;
  }
  
  @media (min-width: 768px) {
    .t-slider {
      grid-auto-columns: 45%;
    }
  }
  
  @media (min-width: 1024px) {
    .t-slider {
      grid-auto-columns: 32%;
      gap: 20px;
    }
  }
  
  .t-card {
    scroll-snap-align: center;
    background: #161618;
    color: #f2f2f2;
    border: 1px solid #242427;
    border-radius: 16px;
    padding: 20px;
    display: grid;
    gap: 18px;
  }
  
  .testimonial__quote {
    font-size: 1.05rem;
    line-height: 1.6;
    margin: 0;
    color: #e0e0e0;
  }
  
  .testimonial__meta {
    display: flex;
    gap: 14px;
    align-items: center;
  }
  
  .testimonial__avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }
  
  .testimonial__name {
    font-weight: 700;
    margin: 0 0 4px;
    color: #fff;
  }
  
  .testimonial__info {
    margin: 0;
    color: #a0a0a0;
    font-size: 0.9rem;
  }
  
  /* Hide scrollbar but keep functionality */
  .t-slider::-webkit-scrollbar {
    height: 6px;
  }
  
  .t-slider::-webkit-scrollbar-track {
    background: #1a1a1c;
    border-radius: 3px;
  }
  
  .t-slider::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 3px;
  }
  
  .t-slider::-webkit-scrollbar-thumb:hover {
    background: #444;
  }
</style>

{% schema %}
{
  "name": "Featured testimonials",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Light vs Dark Humor fans are talking" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Quote", "default": "Humor split personalities never felt so stylish." },
        { "type": "text", "id": "name", "label": "Name", "default": "Riley M." },
        { "type": "text", "id": "meta", "label": "Meta", "default": "Verified buyer" },
        { "type": "image_picker", "id": "avatar", "label": "Avatar" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Featured testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
