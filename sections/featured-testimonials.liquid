{% comment %}
  Featured testimonials carousel for homepage
{% endcomment %}

{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<section class="featured-testimonials" data-section-id="{{ section.id }}">
  <div class="featured-testimonials__inner">
    {% if section.settings.heading != blank %}
      <h2 class="featured-testimonials__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="t-slider-wrapper">
      <div class="t-slider" data-testimonials-slider tabindex="0" role="list" aria-label="Customer testimonials">
        {% for block in section.blocks %}
          <article class="t-card" role="listitem" {{ block.shopify_attributes }}>
            {% if block.settings.quote != blank %}
              <blockquote class="testimonial__quote">{{ block.settings.quote }}</blockquote>
            {% endif %}
            <div class="testimonial__meta">
              {% if block.settings.avatar != blank %}
                {{
                  block.settings.avatar
                  | image_url: width: 120
                  | image_tag: class: 'testimonial__avatar', loading: 'lazy'
                }}
              {% endif %}
              <div>
                <p class="testimonial__name">{{ block.settings.name }}</p>
                {% if block.settings.meta != blank %}
                  <p class="testimonial__info">{{ block.settings.meta }}</p>
                {% endif %}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
      {% if section.blocks.size > 1 %}
        <div class="t-slider-nav">
          <button type="button" class="t-nav-btn t-nav-prev" data-testimonials-prev aria-label="Previous testimonial">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
          </button>
          <button type="button" class="t-nav-btn t-nav-next" data-testimonials-next aria-label="Next testimonial">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script src="{{ 'testimonials.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Featured testimonials",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Light vs Dark Humor fans are talking" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Humor split personalities never felt so stylish."
        },
        { "type": "text", "id": "name", "label": "Name", "default": "Riley M." },
        { "type": "text", "id": "meta", "label": "Meta", "default": "Verified buyer" },
        { "type": "image_picker", "id": "avatar", "label": "Avatar" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Featured testimonials",
      "blocks": [{ "type": "testimonial" }, { "type": "testimonial" }, { "type": "testimonial" }]
    }
  ]
}
{% endschema %}
