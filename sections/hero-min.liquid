{% comment %}
  Astra Hero (minimal, LCP-friendly)
{% endcomment %}
<div class="section section-{{ section.id }}">
<style>
  .section-{{ section.id }} {
    padding-block: {{ section.settings.pad_y | default: 40 }}px;
    text-align: {{ section.settings.text_align | default: 'left' }};
  }
  .section-{{ section.id }} :where(.image, .media, .card__media, .image-with-text__media, .astra-hero__media) img {
    max-width: {{ section.settings.image_max | default: 800 }}px;
    height: auto;
  }
  .section-{{ section.id }} :where(.buttons, .button-row, .card__actions, .cta-row) {
    display: flex;
    justify-content: {% if section.settings.button_align == 'center' %}center{% elsif section.settings.button_align == 'right' %}flex-end{% else %}flex-start{% endif %};
    gap: .5rem;
    flex-wrap: wrap;
  }
</style>
<section class="astra-hero">
  <div class="astra-hero__inner">
    {% if section.settings.eyebrow != blank %}
      <p class="astra-hero__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    <h1 class="astra-hero__headline">{{ section.settings.headline }}</h1>
    {% if section.settings.subcopy != blank %}
      <p class="astra-hero__subcopy">{{ section.settings.subcopy }}</p>
    {% endif %}
    <a class="astra-hero__cta" href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
  </div>
  {% if section.settings.hero_image != blank %}
    <picture class="astra-hero__media">
      {{
        section.settings.hero_image
        | image_url: width: 1600
        | image_tag:
          loading: 'eager',
          fetchpriority: 'high',
          widths: '800,1200,1600',
          sizes: '(min-width: 768px) 75vw, 100vw',
          alt: section.settings.headline
      }}
    </picture>
  {% endif %}
</section>

<style>
  :root {
    --astra-bg: #0b0b0c;
    --astra-fg: #fff;
    --astra-accent: #eded6b;
  }
  .astra-hero {
    display: grid;
    gap: 1.25rem;
    align-items: center;
    background: var(--astra-bg);
    color: var(--astra-fg);
    padding: clamp(24px, 4vw, 64px);
    border-radius: 20px;
  }
  .astra-hero__inner {
    max-width: 840px;
  }
  .astra-hero__eyebrow {
    letter-spacing: 0.14em;
    text-transform: uppercase;
    opacity: 0.7;
    margin: 0 0 0.25rem;
  }
  .astra-hero__headline {
    font-size: clamp(28px, 5.2vw, 56px);
    line-height: 1.04;
    margin: 0.25rem 0 0.5rem;
    font-weight: 800;
  }
  .astra-hero__subcopy {
    max-width: 60ch;
    opacity: 0.88;
    margin: 0 0 1rem;
    font-size: clamp(16px, 2.2vw, 18px);
  }
  .astra-hero__cta {
    display: inline-block;
    padding: 0.9rem 1.25rem;
    border-radius: 12px;
    background: var(--astra-accent);
    color: #111;
    font-weight: 700;
    text-decoration: none;
  }
  .astra-hero__media {
    justify-self: end;
    max-width: min(46vw, 720px);
  }
  @media (min-width: 980px) {
    .astra-hero {
      grid-template-columns: 1fr 0.9fr;
    }
  }
</style>
</div>

{% schema %}
{
  "name": "Astra – Minimal Hero",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "New drop" },
    { "type": "text", "id": "headline", "label": "Headline", "default": "Everything is fine (probably)." },
    {
      "type": "textarea",
      "id": "subcopy",
      "label": "Subcopy",
      "default": "Dark humor, clean builds. Launching with our first two tees while we spin up the rest."
    },
    { "type": "text", "id": "cta_text", "label": "CTA text", "default": "Shop the drop" },
    { "type": "url", "id": "cta_url", "label": "CTA link" },
    { "type": "image_picker", "id": "hero_image", "label": "Optional image" },
    {
      "type": "header",
      "content": "Design Controls"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "pad_y",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_max",
      "min": 240,
      "max": 1600,
      "step": 20,
      "unit": "px",
      "label": "Max image width",
      "default": 800
    },
    {
      "type": "select",
      "id": "button_align",
      "label": "Button alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [{ "name": "Astra – Minimal Hero" }]
}
{% endschema %}
