{% doc %}
  @prompt
    related product "you may also like" featuring my other sku, its not showing the product image i selected
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-related-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-related-products__container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-related-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_margin_bottom }}px;
  }

  .ai-related-products__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    color: rgb(var(--color-foreground));
    margin: 0;
    line-height: 1.2;
  }

  .ai-related-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
    margin-top: {{ block.settings.products_margin_top }}px;
  }

  .ai-related-products__card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    {% if settings.card_style == 'card' %}
      background: rgb(var(--color-background));
      border: {{ settings.card_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.card_border_opacity | divided_by: 100.0 }});
      border-radius: {{ settings.card_corner_radius }}px;
      padding: {{ settings.card_image_padding }}px;
      {% if settings.card_shadow_opacity > 0 %}
        box-shadow: {{ settings.card_shadow_horizontal_offset }}px {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba(var(--color-shadow), {{ settings.card_shadow_opacity | divided_by: 100.0 }});
      {% endif %}
    {% endif %}
  }

  .ai-related-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    overflow: hidden;
    border-radius: {{ settings.media_radius }}px;
    display: block;
    text-decoration: none;
    {% if settings.media_border_thickness > 0 %}
      border: {{ settings.media_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.media_border_opacity | divided_by: 100.0 }});
    {% endif %}
    {% if settings.media_shadow_opacity > 0 %}
      box-shadow: {{ settings.media_shadow_horizontal_offset }}px {{ settings.media_shadow_vertical_offset }}px {{ settings.media_shadow_blur }}px rgba(var(--color-shadow), {{ settings.media_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-related-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    display: block;
  }

  .ai-related-products__card-{{ ai_gen_id }}:hover .ai-related-products__image-{{ ai_gen_id }} {
    {% if settings.animations_hover_elements == 'vertical-lift' %}
      transform: translateY(-2px);
    {% elsif settings.animations_hover_elements == '3d-lift' %}
      transform: translateY(-4px) scale(1.02);
    {% endif %}
  }

  .ai-related-products__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: rgba(var(--color-foreground), 0.04);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-related-products__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
    fill: rgba(var(--color-foreground), 0.3);
  }

  .ai-related-products__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_content_padding }}px 0 0;
    text-align: {{ settings.card_text_alignment }};
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-related-products__title-link-{{ ai_gen_id }} {
    color: rgb(var(--color-foreground));
    text-decoration: none;
    display: block;
  }

  .ai-related-products__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    line-height: 1.3;
    color: inherit;
  }

  .ai-related-products__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    margin: 0 0 {{ block.settings.price_margin_bottom }}px;
  }

  .ai-related-products__price--regular-{{ ai_gen_id }} {
    color: rgb(var(--color-foreground));
  }

  .ai-related-products__price--sale-{{ ai_gen_id }} {
    color: rgb(var(--color-foreground));
  }

  .ai-related-products__price--compare-{{ ai_gen_id }} {
    color: rgba(var(--color-foreground), 0.75);
    text-decoration: line-through;
    margin-left: 8px;
  }

  .ai-related-products__badge-{{ ai_gen_id }} {
    position: absolute;
    {{ settings.badge_position }}: 8px;
    z-index: 2;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 500;
    border-radius: {{ settings.badge_corner_radius }}px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-related-products__badge--sale-{{ ai_gen_id }} {
    background: rgb(var(--color-scheme-5-background));
    color: rgb(var(--color-scheme-5-text));
  }

  .ai-related-products__badge--sold-out-{{ ai_gen_id }} {
    background: rgb(var(--color-scheme-3-background));
    color: rgb(var(--color-scheme-3-text));
  }

  .ai-related-products__button-{{ ai_gen_id }} {
    margin-top: auto;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: {{ settings.buttons_border_thickness }}px solid rgba(var(--color-button), {{ settings.buttons_border_opacity | divided_by: 100.0 }});
    border-radius: {{ settings.buttons_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-block;
    width: 100%;
    {% if settings.buttons_shadow_opacity > 0 %}
      box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba(var(--color-shadow), {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-related-products__button-{{ ai_gen_id }}:hover {
    background: rgba(var(--color-button), 0.85);
    transform: translateY(-1px);
  }

  .ai-related-products__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: rgba(var(--color-foreground), 0.6);
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .ai-related-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-related-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-related-products__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-related-products__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-related-products-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  <div class="ai-related-products__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-related-products__header-{{ ai_gen_id }}">
        <h2 class="ai-related-products__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.selected_products.size > 0 %}
      <div class="ai-related-products__grid-{{ ai_gen_id }}">
        {% for product in block.settings.selected_products limit: block.settings.products_to_show %}
          <div class="ai-related-products__card-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-related-products__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image != blank %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | default: product.title | escape }}"
                  class="ai-related-products__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-related-products__placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if product.compare_at_price > product.price %}
                <div class="ai-related-products__badge-{{ ai_gen_id }} ai-related-products__badge--sale-{{ ai_gen_id }}">
                  Sale
                </div>
              {% elsif product.available == false %}
                <div class="ai-related-products__badge-{{ ai_gen_id }} ai-related-products__badge--sold-out-{{ ai_gen_id }}">
                  Sold out
                </div>
              {% endif %}
            </a>

            <div class="ai-related-products__content-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-related-products__title-link-{{ ai_gen_id }}">
                <h3 class="ai-related-products__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              </a>

              {% if block.settings.show_price %}
                <div class="ai-related-products__price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-related-products__price--sale-{{ ai_gen_id }}">{{ product.price | money }}</span>
                    <span class="ai-related-products__price--compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    <span class="ai-related-products__price--regular-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_button %}
                <a href="{{ product.url }}" class="ai-related-products__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-related-products__empty-state-{{ ai_gen_id }}">
        Next, select products to display in this section
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "You may also like",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "product_list",
      "id": "selected_products",
      "label": "Products",
      "limit": 12
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View product"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Columns on desktop",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on tablet",
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        {
          "value": "1/1",
          "label": "Square"
        },
        {
          "value": "3/4",
          "label": "Portrait"
        },
        {
          "value": "4/3",
          "label": "Landscape"
        },
        {
          "value": "16/9",
          "label": "Wide"
        }
      ],
      "default": "1/1"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 28
    },
    {
      "type": "range",
      "id": "product_title_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Product title size",
      "default": 16
    },
    {
      "type": "range",
      "id": "price_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Price size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Button text size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Heading margin bottom",
      "default": 20
    },
    {
      "type": "range",
      "id": "products_margin_top",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Products margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "card_content_padding",
      "min": 0,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Card content padding",
      "default": 16
    },
    {
      "type": "range",
      "id": "title_margin_bottom",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Title margin bottom",
      "default": 8
    },
    {
      "type": "range",
      "id": "price_margin_bottom",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Price margin bottom",
      "default": 12
    },
    {
      "type": "range",
      "id": "button_padding",
      "min": 8,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Button padding",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "You may also like"
    }
  ]
}
{% endschema %}